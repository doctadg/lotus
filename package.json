{
  "name": "ai-chat-app",
  "version": "1.0.0",
  "description": "A modern AI chat application with streaming support",
  "private": true,
  "workspaces": [
    "backend",
    "mobile"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:mobile\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:mobile": "cd mobile && npm start",
    "build": "npm run build:backend",
    "build:backend": "cd backend && npm run build",
    "build:mobile": "cd mobile && expo build",
    "install:all": "npm install && cd backend && npm install && cd ../mobile && npm install",
    "clean": "rm -rf node_modules backend/node_modules mobile/node_modules backend/.next mobile/dist",
    "lint": "npm run lint:backend",
    "lint:backend": "cd backend && npm run lint"
  },
  "keywords": [
    "ai",
    "chat",
    "nextjs",
    "react-native",
    "expo",
    "langchain",
    "openrouter",
    "streaming"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}